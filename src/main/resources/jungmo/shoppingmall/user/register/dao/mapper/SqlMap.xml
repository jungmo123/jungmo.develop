<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="jungmo.shoppingmall.user.register.dao.mapper.RegisterMapper">
	<insert id="addUser" parameterType="user">
		insert into users
		values(#{userId},#{userPwd},#{userEmail},#{userPhone},#{userSi},#{userGu},#{userDong},#{userDetailArea},1,sysdate,0,#{userMailAgreement},0,null)
	</insert>
	
	<select id = "getClauses" resultType = "cls">
		select cls_num clsNum,cls_title clsTitle,cls_content clsContent,cls_usage clsUsage
		from clauses
		where cls_usage != '사용하지않음'
	</select>
	
	<select id = "overlapInjection" resultType = "ovl">
		select user_id userId
		from users
		where user_id = #{userId}
	</select>
</mapper> 